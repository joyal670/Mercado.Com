<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="15dp"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="150dp"
                android:id="@+id/listpimage"
                android:layout_height="150dp"
                android:layout_gravity="left"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:src="@mipmap/loader_png"
                android:scaleType="centerCrop"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/listpname"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:textSize="18sp"
                    android:gravity="left"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorBlack"
                    android:text="xxx xxx xxxx"/>
                <TextView
                    android:id="@+id/listpdescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:textSize="15sp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:textStyle="italic"
                    android:text="xx xxx xxx xxx xx"/>

                <TextView
                    android:id="@+id/listpprice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="xxx"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:gravity="left"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/colorRed"
                    />

                <TextView
                    android:id="@+id/listpstoke"
                    android:layout_width="wrap_content"
                    android:layout_gravity="right"
                    android:layout_height="wrap_content"
                    android:text="Status"
                    android:layout_marginRight="15dp"
                    android:textColor="@color/colorBlack"/>

                <Button
                    android:layout_width="100dp"
                    android:layout_height="35dp"
                    android:text="Add To Cart"
                    android:layout_gravity="right"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="5dp"
                    android:textAllCaps="true"
                    android:textStyle="bold"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/colorWhite"
                    android:background="@drawable/round_button_cart"
                    android:id="@+id/listpcart"/>

            </LinearLayout>




        </LinearLayout>








    </LinearLayout>


</androidx.cardview.widget.CardView>