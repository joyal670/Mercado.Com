<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@mipmap/loader_png"
                android:scaleType="centerCrop"
                android:layout_gravity="center"
                android:id="@+id/checkoutitemImage"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="10dp">

                <TextView
                    android:id="@+id/checkoutitemname"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:hint="Name"
                    android:layout_margin="2dp"
                    android:layout_gravity="center|left"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:hint="Type"
                    android:layout_margin="2dp"
                    android:id="@+id/checkoutitemtype"
                    android:textColor="@color/colorBlack"
                    android:layout_gravity="center|left"/>
                <TextView
                    android:id="@+id/checkoutitemprice"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:hint="Price"
                    android:layout_margin="5dp"
                    android:textColor="@color/colorRed"
                    android:layout_gravity="center|left"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="40dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/cart_page_round_buttons"
                        android:id="@+id/checkoutitemqty"
                        android:text="1"
                        android:layout_margin="5dp"
                        android:gravity="center"
                        android:textColor="@color/colorBlack"/>

<!--                    <ImageButton-->
<!--                        android:layout_width="25dp"-->
<!--                        android:layout_height="25dp"-->
<!--                        android:src="@drawable/add_icon"-->
<!--                        android:background="@drawable/cart_page_round_buttons"-->
<!--                        android:padding="4dp"-->
<!--                        android:layout_marginLeft="10dp"-->
<!--                        android:layout_marginTop="5dp"-->
<!--                        android:id="@+id/chekoutaddqty"-->
<!--                        android:clickable="true" />-->

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|bottom">

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="Buy Now"
                android:textSize="20sp"
                android:layout_marginRight="15dp"
                android:textAllCaps="true"
                android:id="@+id/checkoutcheckbox"
                android:gravity="center"/>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>
